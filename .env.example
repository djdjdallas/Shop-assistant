# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SCOPES=read_products,write_products,read_orders,read_inventory
SHOPIFY_APP_URL=https://your-app.vercel.app

# Public Shopify API key (exposed to client)
NEXT_PUBLIC_SHOPIFY_API_KEY=your_shopify_api_key

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Development fallback (only for local development)
DEFAULT_SHOP_ID=dev-shop-id

# Optional: Node environment
NODE_ENV=development
